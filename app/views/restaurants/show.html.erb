<div class="container">
  <div class="my-5">
    <h1 ><%= @restaurant.name %></h1>
    <p><%= '⭐️ ' * @restaurant.rating %></p>
    <div class="d-flex">
      <%= link_to "Edit", edit_restaurant_path(@restaurant), class: "btn btn-primary mr-3" %>
      <%= link_to "Delete", restaurant_path(@restaurant), method: 'delete', data: { confirm: 'Okay or what?' }, class: "btn btn-primary" %>
    </div>
  </div>
  <p><%= @restaurant.address %></p>
  <%= link_to "Back", restaurants_path, class: "btn btn-primary" %>
</div>